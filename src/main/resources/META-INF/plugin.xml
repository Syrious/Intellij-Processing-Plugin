<!--            implementationClass="com.github.syrious.processingintellijplugin.PdeFileType"-->
<!--            fieldName="INSTANCE"-->
<!--            language="PDE"-->
<!--            extensions="pde"/>-->

        <fileTypeFactory implementation="com.github.syrious.processingintellijplugin.PdeFileTypeFactory"/>

        <lang.syntaxHighlighterFactory key="Sample"
                                       implementationClass="com.github.syrious.processingintellijplugin.PdeSyntaxHighlighterFactory"/>

        <lang.parserDefinition language="PDE" implementationClass="com.github.syrious.processingintellijplugin.PdeParserDefinition"/>
        <lang.ast.factory language="PDE" implementationClass="com.github.syrious.processingintellijplugin.PdeASTFactory"/>
        <lang.psiStructureViewFactory language="PDE"
                                      implementationClass="com.github.syrious.processingintellijplugin.PdeStructureViewFactory"/>
        <colorSettingsPage implementation="com.github.syrious.processingintellijplugin.PdeColorSettingsPage"/>
        <externalAnnotator language="PDE" implementationClass="com.github.syrious.processingintellijplugin.PdeExternalAnnotator"/>

        <lang.findUsagesProvider language="PDE"
                                 implementationClass="com.github.syrious.processingintellijplugin.PdeFindUsagesProvider"/>
    </extensions>

